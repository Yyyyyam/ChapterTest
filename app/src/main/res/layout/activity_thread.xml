<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/et_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="请输入网址"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下载"
        app:layout_constraintTop_toBottomOf="@id/et_url"
        app:layout_constraintStart_toStartOf="@id/et_url"/>

    <Button
        android:id="@+id/bt_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放"
        app:layout_constraintStart_toEndOf="@id/bt_start"
        app:layout_constraintEnd_toStartOf="@id/bt_stop"
        app:layout_constraintTop_toTopOf="@id/bt_start"/>

    <Button
        android:id="@+id/bt_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止"
        app:layout_constraintEnd_toEndOf="@id/et_url"
        app:layout_constraintTop_toTopOf="@id/bt_play"/>

    <TextView
        android:id="@+id/tv_status_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未下载"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/bt_start"
        app:layout_constraintStart_toStartOf="@id/bt_start"/>

    <TextView
        android:id="@+id/tv_status_is_playing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未播放"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_status_download"
        app:layout_constraintStart_toStartOf="@id/bt_start"/>

    <TextView
        android:id="@+id/tv_status_playtimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已播放0次"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_status_is_playing"
        app:layout_constraintStart_toStartOf="@id/bt_start"/>

</androidx.constraintlayout.widget.ConstraintLayout>