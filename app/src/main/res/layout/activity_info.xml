<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/info_tv_int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="int:0"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/info_tv_byte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="byte:0"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/info_tv_int"
        app:layout_constraintStart_toStartOf="@id/info_tv_int"/>

    <TextView
        android:id="@+id/info_tv_serial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Serializable:0"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/info_tv_byte"
        app:layout_constraintStart_toStartOf="@id/info_tv_byte"/>

    <TextView
        android:id="@+id/info_tv_net"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="net:wifi"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/info_tv_serial"
        app:layout_constraintStart_toStartOf="@id/info_tv_serial"/>

</androidx.constraintlayout.widget.ConstraintLayout>