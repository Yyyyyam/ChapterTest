<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_account_tv_id"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="ID 1"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_account_tv_name"/>

    <TextView
        android:id="@+id/item_account_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingEnd="30dp"
        android:text="记账项 买点青菜"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_account_tv_money"
        app:layout_constraintStart_toEndOf="@id/item_account_tv_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_account_tv_money"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="金额￥ 120"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_account_tv_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>